<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <servlet>
    <display-name>tweet-map</display-name>
    <servlet-name>tweet</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <!-- This param is used to indicate where the resources are for the REST Servlet -->
    <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.resources</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>tweet</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
     <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <listener>
   <listener-class>com.daemonservices.TweetMapExecutor</listener-class>
  </listener>
</web-app>
